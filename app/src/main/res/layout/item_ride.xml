<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="17dp"
    app:cardElevation="0dp"
    android:layout_margin="7dp"
    app:cardBackgroundColor="#59FF6626"
    tools:ignore="HardCodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <LinearLayout
            android:id="@+id/title_bicycle_parts_distance_items_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date_time_item_layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@font/averagesans_regular"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/bicycle_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bicycle"
                android:fontFamily="@font/averagesans_regular"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/parts_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parts"
                android:fontFamily="@font/averagesans_regular"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:fontFamily="@font/averagesans_regular"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_time_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_bicycle_parts_distance_items_layout">

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averagesans_regular"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averagesans_regular"
                android:text="Time"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
